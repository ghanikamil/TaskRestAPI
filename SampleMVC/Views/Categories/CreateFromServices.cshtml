@model MyWebFormApp.BLL.DTOs.CategoryCreateDTO
@{
}
<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Category</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form method="post" action="/Categories/CreateFromServices">
                    <div class="form-group">
                        <label asp-for="CategoryName">Category Name :</label>
                        <input asp-for="CategoryName" class="form-control"
                               placeholder="Insert Category Name" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>

    </div>




</div>
